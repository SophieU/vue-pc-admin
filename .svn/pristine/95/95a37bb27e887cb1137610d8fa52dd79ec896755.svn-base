/*transition定义动画*/
/* 设置持续时间和动画函数 */
.slide-fade-enter-active {
  transition: all .3s ease;

}
.slide-fade-leave-active {
  transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0);
  opacity: 0;
}
.slide-fade-enter, .slide-fade-leave
  /* .slide-fade-leave-active for below version 2.1.8 */ {
  transform: translateX(30px);
  opacity: 0;
}
.slide-enter-active{
  animation: slideLeft .3s linear;
}
.slide-leave-active{
  animation:slideRight .3s linear;
}
.slide-leave,.slide-enter{
  opacity: 0;
  transform:translateX(30px)
}
.pagination{
  display: flex;
  justify-content: center;
  padding: 20px;
}
.clearfix{
  overflow: hidden;
  &:after{
    content: '';
    display: block;
    width: 0;
    height: 0;
    clear: both;
    visibility: hidden;
  }
}
.pull-left{
  float: left;
}
.pull-right{
  float: right;
}
.mb-15{
  margin-bottom: 15px;
}
.mt-15{
  margin-top: 15px;
}
.ml-15{
  margin-left: 15px;
}
.tag{
  display: inline-block;
  padding: 4px 10px;
  margin: 5px;
  border-radius: 4px;
  border: 1px solid #2d8cf0;
  color: #2d8cf0;
  user-select: none;
}
.form-tag{
  display: inline-block;
  height: 28px;
  line-height: 28px;
  margin: 2px 4px 2px 0;
  padding: 0 8px;
  border: 1px solid #e8eaec;
  border-radius: 3px;
  background: #f7f7f7;
  font-size: 12px;
  vertical-align: middle;
  opacity: 1;
  overflow: hidden;
  cursor: pointer;
  position: relative;
  input[type="radio"],input[type="checkbox"]{
    opacity: 0;
    width: 100%;
    height: 100%;
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    cursor: pointer;
  }
  &.checked{
    background: #2d8cf0;
    color: #fff;
  }
}
.textarea{
  display: inline-block;
  width: 100%;
  height: 100px;
  line-height: 1.5;
  padding: 4px 7px;
  font-size: 12px;
  border: 1px solid #dcdee2;
  border-radius: 4px;
  color: #515a6e;
  background-color: #fff;
  background-image: none;
  position: relative;
  cursor: text;
  transition: border .2s ease-in-out,background .2s ease-in-out,box-shadow .2s ease-in-out;
  &:focus{
    //border-color: ;
  }
}
.delete-modal{
  .ivu-icon{
    font-size: 32px;
    color: #ff6239;
  }
  h4{
    text-align: center;
    font-size: 16px;
    margin-bottom: 10px;
    color: #ff6239;
  }
  p{
    font-size: 14px;
    text-align: center;
  }
}
.delete-alert{
  display: flex;
  padding: 15px 10px;
  margin-top: 10px;
  align-items: center;
  .ivu-icon{
    font-size: 32px;
    color: #ff6239;
  }
  .delete-text{
    font-size: 14px;
    padding: 5px 10px;
  }
}

input[type="file"]{
  height: 30px;
  line-height: 25px;
}
.ivu-btn-text{
  color: #2d8cf0;
}

@keyframes slideLeft {
  0%{
    transform:translateX(30px);
    opacity: 0;
  }
  100%{
    transform:translateX(0);
    opacity: 1;
  }
}
@keyframes slideRight {
  0%{
    transform:translateX(0px);
    opacity: 1;
  }
  100%{
    transform:translateX(30px);
    opacity: 0;
  }
}


/*登录页对iview的修改*/
.ivu-btn-primary{
  color: #fff;
  background-color: #039dff;
  border-color: #039dff;
}
//登录页
.login-container{
  .ivu-form-item-required .ivu-form-item-label:before{
    content: '';
    display: none;
  }
  .ivu-form{
    .ivu-btn{
      &:focus{
        box-shadow: none;
      }
    }
    .ivu-form-item-label{
      font-size: 16px!important;
      padding-bottom: 8px;
      color: #d4d4d4;
      &.focus{
        color: #016dfb;
      }
    }
    .ivu-input{
      border: none;
      border-bottom: 1px solid #ccc;
      border-radius: 0;
      &:focus{
        border-color: #016dfb;
        box-shadow: none;
      }
    }
    .ivu-btn>span{
      vertical-align:top;
    }
  }
}
.form-text{
  display: block;
  padding: 10px 12px 10px 0;
  line-height: 1em;
}
.collapsed-menu .ivu-menu-submenu-title-icon{
  display: none!important;
}
.tips{
  color:#999;
  font-size: 14px;
}
.inline-block{
  display: inline-block;
}
.btn-link{
  border: none;
  text-decoration: none;
  color: #039dff;
  background: transparent;
  cursor: pointer;
  &:focus{
    border: none;
    outline: none;
  }
  &:hover{
    opacity: .7;
  }
}
.lang-btn{
  padding: 6px 30px;
}
.inner-center{
  text-align: center;
}
.ivu-divider-horizontal{
  margin: 10px 0;
}

.native-table{
  border: 1px solid #e8eaec;
  border-collapse: collapse;
  width: 100%;
  tr{
    transition: all 1s ease ;
    border-bottom:1px solid #e8eaec ;

    &:hover{
      background: #ebf7ff;
    }
  }
  th{
    height: 35px;
    white-space: nowrap;
    overflow: hidden;
    background-color: #f8f8f9;
    //border:1px solid #e8eaec ;
    text-align: center;
    padding: 6px;
  }
  td{
    text-align: center;
    white-space: nowrap;
    height: 35px;
    padding: 6px;
    font-size: 12px;
  }
}

.native-input{
  border: 1px solid #e8eaec;
  border-radius: 4px;
  padding: 4px 10px;
  outline: none;
  &:read-only{
    background-color: #f8f8f9;
  }
}

.card{
  border: 1px solid #e8eaec;
  .card-header{
    padding: 5px 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e8eaec;
    .card-title{
      font-weight: bold;
      font-size: 14px;
    }
  }
  .card-body{
    padding: 15px;
  }
  &.no-border{
    border: none;
    .card-header{
      border-bottom: none;
    }
  }
}

.tab-nav{
  white-space: nowrap;
  overflow-x:auto;
  border-bottom: 1px solid #dcdee2;
  li{
    height: 36px;
    display: inline-block;
    padding: 8px 20px;
    box-sizing: border-box;
    cursor: pointer;
    text-decoration: none;
    position: relative;
    transition: color .3s ease-in-out;
    &:hover{
      color: #57a3f3;
    }
    &>span{
      margin-right: 10px;
    }
    &.nav-active{
      color: #2d8cf0;
      border-bottom: 2px solid #2d8cf0;
    }
    .nav-title{
      position: relative;
      display: block;
      height: 100%;
    }
    .ivu-badge-count{
      position: absolute;
      top: -8px;
      right: -15px;
    }
  }
}
.table-wrapper{
  width: 100%;
  overflow: auto;
}
.inline_form_item{
  .ivu-form-item-label{
    float:left;
    height:32px;
    line-height: 32px;
    min-width:100px;
    text-align:left;
    padding: 0;
    padding-right: 10px;
  }
}

